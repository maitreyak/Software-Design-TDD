package detectors;

public class PalindromeDetector implements Detector {
		
  public boolean isSpecialWord(String word){
  	return isPalindrome(word);
  }
	
	public boolean isPalindrome(String word) {
	 StringBuilder strWord = new StringBuilder(word);
	 return (strWord.reverse().toString()).equalsIgnoreCase(word);	
  }
}
